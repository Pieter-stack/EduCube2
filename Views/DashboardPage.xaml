<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mynamespace="clr-namespace:EduCube"
             xmlns:local="clr-namespace:EduCube.ViewModels;assembly=EduCube"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
             xmlns:lvcore="clr-namespace:LiveChartsCore;assembly=LiveChartsCore"
             x:Class="EduCube.DashboardPage">

    <ContentPage.BindingContext>
        <local:Charts/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
    <Grid>
        <!--New Grid Definitions-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5.5*"/>
        </Grid.ColumnDefinitions>
        <!--Navbar-->
        <mynamespace:Navbar/>

        <!--Main Container-->
        <Frame Grid.Column="1" BackgroundColor="Transparent" BorderColor="Transparent">
            <Grid ColumnSpacing="30" RowSpacing="30">
                <!--New Grid Definitions-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="2.8*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <!--Grid Content-->
                <Frame Grid.Column="0" Grid.Row="0" BackgroundColor="#120B29" BorderColor="Transparent"  CornerRadius="30" >
                    <Grid>
                            <!--New Grid Definitions-->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.5*"/>
                                <RowDefinition Height="2*"/>
                            </Grid.RowDefinitions>
                            <Frame  Grid.Row="0" BackgroundColor="Transparent" BorderColor="Transparent"  CornerRadius="0" Margin="-20,-20,-20,0" >
                                <VerticalStackLayout>
                                    <Label Text="Staff" TextColor="White" FontSize="20" FontFamily="Roboto-Regular"/>
                                    <Label Text="65" TextColor="White" FontSize="60" FontAttributes="Bold" FontFamily="Roboto-Regular"/>
                                </VerticalStackLayout>
                            </Frame>

                            <Frame  Grid.Row="1" BackgroundColor="Transparent" BorderColor="Transparent"  CornerRadius="0" Margin="-20,0,-20,-20"  >
                                <lvc:CartesianChart
                                    Series="{Binding LineOne}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding YAxes}"
                                    AnimationsSpeed="00:00:00.400"
                                    EasingFunction="{Binding Source={x:Static lvcore:EasingFunctions.EaseInOut}}">
                                </lvc:CartesianChart>
                            </Frame>
                        </Grid>
                </Frame>

                <Frame Grid.Column="1" Grid.Row="0" BackgroundColor="#F2F1F8" BorderColor="Transparent" CornerRadius="30" >
                        <Grid>
                            <!--New Grid Definitions-->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.5*"/>
                                <RowDefinition Height="2*"/>
                            </Grid.RowDefinitions>
                            <Frame  Grid.Row="0" BackgroundColor="Transparent" BorderColor="Transparent"  CornerRadius="0" Margin="-20,-20,-20,0" >
                                <VerticalStackLayout>
                                    <Label Text="Students" TextColor="#120B29" FontSize="20" FontFamily="Roboto-Regular"/>
                                    <Label Text="20" TextColor="#120B29" FontSize="60" FontAttributes="Bold" FontFamily="Roboto-Regular"/>
                                </VerticalStackLayout>
                            </Frame>

                            <Frame  Grid.Row="1" BackgroundColor="Transparent" BorderColor="Transparent"  CornerRadius="0" Margin="-20,0,-20,-20"  >
                                <lvc:CartesianChart
                                    Series="{Binding LineTwo}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding YAxes}"
                                    AnimationsSpeed="00:00:00.600"
                                    EasingFunction="{Binding Source={x:Static lvcore:EasingFunctions.EaseInOut}}">
                                </lvc:CartesianChart>
                            </Frame>
                        </Grid>
                    </Frame>

                <Frame Grid.Column="2" Grid.Row="0" BackgroundColor="#F2F1F8" BorderColor="Transparent" CornerRadius="30" >
                        <Grid>
                            <!--New Grid Definitions-->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.5*"/>
                                <RowDefinition Height="2*"/>
                            </Grid.RowDefinitions>
                            <Frame  Grid.Row="0" BackgroundColor="Transparent" BorderColor="Transparent"  CornerRadius="0" Margin="-20,-20,-20,0" >
                                <VerticalStackLayout>
                                    <Label Text="Teachers" TextColor="#120B29" FontSize="20" FontFamily="Roboto-Regular"/>
                                    <Label Text="15" TextColor="#120B29" FontSize="60" FontAttributes="Bold" FontFamily="Roboto-Regular"/>
                                </VerticalStackLayout>
                            </Frame>

                            <Frame  Grid.Row="1" BackgroundColor="Transparent" BorderColor="Transparent"  CornerRadius="0" Margin="-20,0,-20,-20"  >
                                <lvc:CartesianChart
                                    Series="{Binding LineThree}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding YAxes}"
                                    AnimationsSpeed="00:00:00.800"
                                    EasingFunction="{Binding Source={x:Static lvcore:EasingFunctions.EaseInOut}}">
                                </lvc:CartesianChart>
                            </Frame>
                        </Grid>
                    </Frame>

                <Frame Grid.Column="3" Grid.Row="0" BackgroundColor="#F2F1F8" BorderColor="Transparent" CornerRadius="30" >
                        <Grid>
                            <!--New Grid Definitions-->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.5*"/>
                                <RowDefinition Height="2*"/>
                            </Grid.RowDefinitions>
                            <Frame  Grid.Row="0" BackgroundColor="Transparent" BorderColor="Transparent"  CornerRadius="0" Margin="-20,-20,-20,0" >
                                <VerticalStackLayout>
                                    <Label Text="Admin" TextColor="#120B29" FontSize="20" FontFamily="Roboto-Regular"/>
                                    <Label Text="50" TextColor="#120B29" FontSize="60" FontAttributes="Bold" FontFamily="Roboto-Regular"/>
                                </VerticalStackLayout>
                            </Frame>

                            <Frame  Grid.Row="1" BackgroundColor="Transparent" BorderColor="Transparent"  CornerRadius="0" Margin="-20,0,-20,-20"  >
                                <lvc:CartesianChart
                                    Series="{Binding LineFour}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding YAxes}"
                                    AnimationsSpeed="00:00:01.000"
                                    EasingFunction="{Binding Source={x:Static lvcore:EasingFunctions.EaseInOut}}">
                                </lvc:CartesianChart>
                            </Frame>
                        </Grid>
                    </Frame>

                <Frame Grid.ColumnSpan="4" Grid.Row="1" BorderColor="Transparent" BackgroundColor="Transparent" >
                    <Grid ColumnSpacing="30">
                        <!--New Grid Definitions-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!--Grid Content-->
                        <Frame Grid.Column="0" Grid.Row="0" BackgroundColor="#F2F1F8" BorderColor="Transparent" CornerRadius="30" Margin="-20,-20,0,-20" >
                                <Grid>
                                    <!--New Grid Definitions-->
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0.8*"/>
                                        <RowDefinition Height="2*"/>
                                    </Grid.RowDefinitions>
                                    <Frame  Grid.Row="0" BackgroundColor="Transparent" BorderColor="Transparent"  CornerRadius="0" Margin="-20,-20,-20,0" >
                                        <VerticalStackLayout >
                                            <Label Text="Total Expenses 2022" TextColor="#828282" FontSize="16" FontFamily="Roboto-Regular"/>
                                            <Label Text="R250 000" TextColor="#120B29" FontSize="40" FontAttributes="Bold" FontFamily="Roboto-Regular"/>
                                        </VerticalStackLayout>
                                    </Frame>

                                    <Frame  Grid.Row="1" BackgroundColor="Transparent" BorderColor="Transparent"  CornerRadius="0" Margin="-20,0,-20,-20"  >
                                        <lvc:CartesianChart
                                    Series="{Binding BarOne}"
                                            XAxes="{Binding XAxesBar}"
                                            AnimationsSpeed="00:00:01.500"
                                            EasingFunction="{Binding Source={x:Static lvcore:EasingFunctions.EaseInOut}}">
                                        </lvc:CartesianChart>
                                    </Frame>
                                </Grid>
                            </Frame>

                        <Frame Grid.Column="1" Grid.Row="0" BackgroundColor="#F2F1F8" BorderColor="Transparent" CornerRadius="30" Margin="0,-20,-20,-20" >
                                <VerticalStackLayout>
                                    <Frame  Grid.Row="0" BackgroundColor="Transparent" BorderColor="Transparent"  CornerRadius="0" Margin="-20,-20,-20,0" >
                                        <VerticalStackLayout BackgroundColor="Transparent" Margin="-10,-10,-10,-10">
                                            <Image Source="backdropadmin.png" Aspect="Fill"/>
                                            <Border 
                                               Padding="8"
                                               Stroke="#F2F1F8"
                                                StrokeThickness="4"
                                               Background="#FFFFFF"
                                                WidthRequest="120"
                                                HeightRequest="120"
                                                HorizontalOptions="Start"
                                                Margin="40,-80,0,0">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="20,20,20,20"/>
                                                </Border.StrokeShape>
                                                <StackLayout>
                                                    <Image Source="profilepic.png" Aspect="Fill"/>
                                                </StackLayout>
                                            </Border>
                                        </VerticalStackLayout>
                                    </Frame>

                                    <Frame  Grid.Row="1" BackgroundColor="Transparent" BorderColor="Transparent"  CornerRadius="0" Margin="-20,0,-20,-20">
                                        <HorizontalStackLayout>
                                            <Label Text="Pieter Venter" FontSize="46" FontAttributes="Bold" FontFamily="Roboto-Bold" Margin="20,-20,0,0" TextColor="#120B29"/>
                                            <Label Text="Admin"  FontSize="42"  FontFamily="Roboto-Bold" Margin="20,-17,0,0" TextColor="#120B29"/>
                                        </HorizontalStackLayout>
                                    </Frame>
                                </VerticalStackLayout>
                            </Frame>





                    </Grid>

                </Frame>




                <Frame Grid.ColumnSpan="4" Grid.Row="2" BorderColor="Transparent" BackgroundColor="Transparent"  >
                    <Grid ColumnSpacing="30">
                        <!--New Grid Definitions-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!--Grid Content-->
                        <Frame Grid.Column="0" Grid.Row="0" BackgroundColor="#F2F1F8" BorderColor="Transparent" CornerRadius="30" Margin="-20,-20,0,-20" >
                                <Grid>
                                    <!--New Grid Definitions-->
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="2*"/>
                                    </Grid.RowDefinitions>
                                    <Frame  Grid.Row="0" BackgroundColor="Transparent" BorderColor="Transparent"  CornerRadius="0" Margin="-20,-20,-20,0" >
                                        <VerticalStackLayout>
                                            <Label Text="Students" TextColor="#828282" FontSize="46" FontFamily="Roboto-Regular" FontAttributes="Bold"/>
                                        </VerticalStackLayout>
                                    </Frame>

                                    <Frame  Grid.Row="1" BackgroundColor="Transparent" BorderColor="Transparent"  CornerRadius="0" Margin="-20,0,-20,-20"  >
                                        <lvc:PieChart
                                    Series="{Binding PieOne}" Margin="-20,-20,-20,-20"
                                            AnimationsSpeed="00:00:00.800" 
                                            EasingFunction="{Binding Source={x:Static lvcore:EasingFunctions.BounceOut}}">
                                        </lvc:PieChart>
                                    </Frame>
                                </Grid>
                            </Frame>

                        <Frame Grid.Column="1" Grid.Row="0" BackgroundColor="#F2F1F8" BorderColor="Transparent" CornerRadius="30" Margin="0,-20,0,-20" >
                                <Grid>
                                    <!--New Grid Definitions-->
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="2*"/>
                                    </Grid.RowDefinitions>
                                    <Frame  Grid.Row="0" BackgroundColor="Transparent" BorderColor="Transparent"  CornerRadius="0" Margin="-20,-20,-20,0" >
                                        <VerticalStackLayout>
                                            <Label Text="Staff" TextColor="#828282" FontSize="46" FontFamily="Roboto-Regular" FontAttributes="Bold"/>
                                        </VerticalStackLayout>
                                    </Frame>

                                    <Frame  Grid.Row="1" BackgroundColor="Transparent" BorderColor="Transparent"  CornerRadius="0" Margin="-20,0,-20,-20"  >
                                        <lvc:PieChart
                                    Series="{Binding PieTwo}" Margin="-20,-20,-20,-20"  
                                            AnimationsSpeed="00:00:01.000" 
                                            EasingFunction="{Binding Source={x:Static lvcore:EasingFunctions.BounceOut}}">
                                        </lvc:PieChart>
                                    </Frame>
                                </Grid>
                            </Frame>

                        <Frame Grid.Column="2" Grid.Row="0" BackgroundColor="#F2F1F8" BorderColor="Transparent" CornerRadius="30" Margin="0,-20,-20,-20" >
                                <Grid>
                                    <!--New Grid Definitions-->
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="2*"/>
                                    </Grid.RowDefinitions>
                                    <Frame  Grid.Row="0" BackgroundColor="Transparent" BorderColor="Transparent"  CornerRadius="0" Margin="-20,-20,-20,0" >
                                        <VerticalStackLayout>
                                            <Label Text="Funds Pool" TextColor="#828282" FontSize="46" FontFamily="Roboto-Regular" FontAttributes="Bold"/>
                                        </VerticalStackLayout>
                                    </Frame>

                                    <Frame  Grid.Row="1" BackgroundColor="Transparent" BorderColor="Transparent"  CornerRadius="0" Margin="-20,0,-20,-20"  >
                                        <lvc:PieChart
                                    Series="{Binding PieThree}" Margin="-20,-20,-20,-20"
                                            AnimationsSpeed="00:00:01.200" 
                                            EasingFunction="{Binding Source={x:Static lvcore:EasingFunctions.BounceOut}}">
                                        </lvc:PieChart>
                                    </Frame>
                                </Grid>
                            </Frame>



                    </Grid>





                </Frame>

            </Grid>
        </Frame>





        <!--- Reminder for later work with grids on all pages and have row and column defined-->
    </Grid>
    </ContentPage.Content> 
    

</ContentPage>
    
