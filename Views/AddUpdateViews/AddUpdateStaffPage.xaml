<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EduCube.Views.AddUpdateViews.AddUpdateStaffPage"
             xmlns:viewModel="clr-namespace:EduCube.ViewModels.AddUpdateViewModels"
             xmlns:models="clr-namespace:EduCube.Models"
             x:DataType="viewModel:AddUpdateStaffViewModel">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Frame Grid.RowSpan="3" Grid.ColumnSpan="3" BackgroundColor="Transparent" CornerRadius="0">
            <Image Source="background.png" Aspect="AspectFill" Margin="-20,-20,-20,-20"/>
        </Frame>


        <Frame Grid.Row="1" Grid.Column="1" BackgroundColor="White" Opacity="0.5" BorderColor="Transparent" CornerRadius="30" Margin="0,0,0,40"/>

        <Frame Grid.Row="1" Grid.Column="1" BackgroundColor="Transparent" Opacity="1" BorderColor="Transparent" CornerRadius="30">

            <VerticalStackLayout>
                <Label Text="Add/Edit Staff" HorizontalOptions="Center" FontSize="36" FontAttributes="Bold" TextColor="White" FontFamily="Monserrat-Regular" Margin="0,20,0,20"></Label>

                <Frame BackgroundColor="Transparent" BorderColor="Transparent">
                    <ScrollView MaximumHeightRequest="680">
                        <VerticalStackLayout>
                            <Label Text="Staff Personal ID Number" HorizontalOptions="Start" FontSize="18" FontAttributes="Bold" TextColor="White" FontFamily="Monserrat-Regular" Margin="10,10,0,10"></Label>
                            <Border 
                    
                       Padding="2"
                       Stroke="White"
                    StrokeThickness="3"
                       Background="Transparent"
                       HorizontalOptions="StartAndExpand"
                                Margin="0,0,0,0" >
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="40,40,40,40"/>
                                </Border.StrokeShape>
                                <Entry Text="{Binding StaffDetail.StaffPersonalID}" FontFamily="Monserrat-Regular" TextColor="White" MinimumWidthRequest="900" HeightRequest="10" FontSize="12"></Entry>
                            </Border>


                            <Label Text="Staff Email" HorizontalOptions="Start" FontSize="18" FontAttributes="Bold" TextColor="White" FontFamily="Monserrat-Regular" Margin="10,10,0,10"></Label>
                            <Border 
                       Padding="2"
                       Stroke="White"
                    StrokeThickness="3"
                       Background="Transparent"
                       HorizontalOptions="StartAndExpand"
                                Margin="0,0,0,0" >
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="40,40,40,40"/>
                                </Border.StrokeShape>
                                <Entry Text="{Binding StaffDetail.StaffEmail}" FontFamily="Monserrat-Regular" TextColor="White" MinimumWidthRequest="900"></Entry>
                            </Border>


                            <Label Text="Staff FirstName" HorizontalOptions="Start" FontSize="18" FontAttributes="Bold" TextColor="White" FontFamily="Monserrat-Regular" Margin="10,10,0,10"></Label>
                            <Border 
                       Padding="2"
                       Stroke="White"
                    StrokeThickness="3"
                       Background="Transparent"
                       HorizontalOptions="StartAndExpand"
                                Margin="0,0,0,0" >
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="40,40,40,40"/>
                                </Border.StrokeShape>
                                <Entry Text="{Binding StaffDetail.StaffFirstName}" FontFamily="Monserrat-Regular" TextColor="White" MinimumWidthRequest="900"></Entry>
                            </Border>


                            <Label Text="Staff LastName" HorizontalOptions="Start" FontSize="18" FontAttributes="Bold" TextColor="White" FontFamily="Monserrat-Regular" Margin="10,10,0,10"></Label>
                            <Border 
                       Padding="2"
                       Stroke="White"
                    StrokeThickness="3"
                       Background="Transparent"
                       HorizontalOptions="StartAndExpand"
                                Margin="0,0,0,0" >
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="40,40,40,40"/>
                                </Border.StrokeShape>
                                <Entry Text="{Binding StaffDetail.StaffLastName}" FontFamily="Monserrat-Regular" TextColor="White" MinimumWidthRequest="900"></Entry>
                            </Border>

                            <Label Text="Staff Role" HorizontalOptions="Start" FontSize="18" FontAttributes="Bold" TextColor="White" FontFamily="Monserrat-Regular" Margin="10,10,0,10"></Label>
                            <Border 
                       Padding="2"
                       Stroke="White"
                    StrokeThickness="3"
                       Background="Transparent"
                       HorizontalOptions="StartAndExpand"
                                Margin="0,0,0,0" >
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="40,40,40,40"/>
                                </Border.StrokeShape>
                                <Entry Text="{Binding StaffDetail.StaffRole}" FontFamily="Monserrat-Regular" TextColor="White" MinimumWidthRequest="900"></Entry>
                            </Border>


                            <Label Text="Staff Image" HorizontalOptions="Start" FontSize="18" FontAttributes="Bold" TextColor="White" FontFamily="Monserrat-Regular" Margin="10,10,0,10"></Label>
                            <Border 
                       Padding="2"
                       Stroke="White"
                    StrokeThickness="3"
                       Background="Transparent"
                       HorizontalOptions="StartAndExpand"
                                Margin="0,0,0,0" >
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="40,40,40,40"/>
                                </Border.StrokeShape>
                                <Entry Text="{Binding StaffDetail.StaffImage}" FontFamily="Monserrat-Regular" TextColor="White" MinimumWidthRequest="900"></Entry>
                            </Border>


                            <Label Text="Staff Hours" HorizontalOptions="Start" FontSize="18" FontAttributes="Bold" TextColor="White" FontFamily="Monserrat-Regular" Margin="10,10,0,10"></Label>
                            <Border 
                       Padding="2"
                       Stroke="White"
                    StrokeThickness="3"
                       Background="Transparent"
                       HorizontalOptions="StartAndExpand"
                                Margin="0,0,0,0" >
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="40,40,40,40"/>
                                </Border.StrokeShape>
                                <Entry Text="{Binding StaffDetail.StaffHours}" FontFamily="Monserrat-Regular" TextColor="White" MinimumWidthRequest="900"></Entry>
                            </Border>

                            <Label Text="Staff Password" HorizontalOptions="Start" FontSize="18" FontAttributes="Bold" TextColor="White" FontFamily="Monserrat-Regular" Margin="10,10,0,10"></Label>
                            <Border 
                       Padding="2"
                       Stroke="White"
                    StrokeThickness="3"
                       Background="Transparent"
                       HorizontalOptions="StartAndExpand"
                                Margin="0,0,0,0" >
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="40,40,40,40"/>
                                </Border.StrokeShape>
                                <Entry Text="{Binding StaffDetail.StaffPassword}" FontFamily="Monserrat-Regular" TextColor="White" MinimumWidthRequest="900"></Entry>
                            </Border>

                        </VerticalStackLayout>
                    </ScrollView>
                </Frame>


                <Button Command="{Binding AddUpdateStaffCommand}" Margin="50,35,50,0" BackgroundColor="#FC6923" TextColor="White" CornerRadius="35" Padding="20" Text="Save" FontFamily="Monserrat-Regular" FontSize="15"></Button>

            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage> 