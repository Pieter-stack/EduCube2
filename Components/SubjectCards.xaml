                                    JustifyContent="SpaceBetween" >
                                    <Border
                                            Padding="0"
                                            Stroke="#5D3AF3"
                                            StrokeThickness="6"
                                            Background="Transparent"
                                            HorizontalOptions="Start"
                                            WidthRequest="220"
                                            HeightRequest="200"
                                            ZIndex="2">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="20,20,20,20"/>
                                        </Border.StrokeShape>
                                        <FlexLayout Direction="Column"
                                     AlignItems="Center"
                                    JustifyContent="SpaceBetween" >
