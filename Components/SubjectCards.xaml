                                            Background="Transparent"
                                            HorizontalOptions="Start"
                                            WidthRequest="420"
                                            HeightRequest="180"
                                            ZIndex="2">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="25,25,25,25"/>
                                            </Border.StrokeShape>
                                            <AbsoluteLayout>
                                                <Label Text="Description"  TextColor="White" ZIndex="3" FontSize="12" Margin="15,15,0,0" FontFamily="Roboto-Regular" WidthRequest="370"  AbsoluteLayout.LayoutBounds="0,0"
