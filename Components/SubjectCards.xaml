                                            StrokeThickness="4"
                                            Background="#FC6923"
                                            HorizontalOptions="Start"
                                            WidthRequest="1.5"
                                            HeightRequest="15"
                                            ZIndex="2"
                                            Margin="90,20,5,0">
                                                        <Border.StrokeShape>
                                                            <RoundRectangle CornerRadius="1,1,1,1"/>
                                                        </Border.StrokeShape>
                                                    </Border>
                                                <Label Text="40" TextColor="White" ZIndex="3" FontSize="18" Margin="10,20,-90,0" FontFamily="Roboto-Regular" WidthRequest="200" />
