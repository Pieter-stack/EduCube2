<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EduCube.Components.Invoices">
    <VerticalStackLayout>

        <FlexLayout Direction="Row" AlignItems="Center" >
            <Label FlexLayout.Basis="Auto" FlexLayout.Order="-2" Text="Pieter Venter" FontSize="26" FontFamily="Roboto-Regular" Margin="20,10,20,0"/>
            <Label FlexLayout.Basis="Auto" FlexLayout.Order="-1" Text="Student" FontSize="26" FontFamily="Roboto-Regular" Margin="20,10,20,0"/>
            <Label FontSize="18" BackgroundColor="Transparent" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FlexLayout.Grow="1" />
            <Label FlexLayout.Basis="Auto" FlexLayout.Order="2" Text="+" FontSize="26" FontFamily="Roboto-Regular" Margin="20,10,20,0"/>
            <Label FlexLayout.Basis="Auto" FlexLayout.Order="3" Text="R105 000" FontSize="26" FontFamily="Roboto-Regular" Margin="20,10,20,0"/>

        </FlexLayout>
        <Border
          Padding="0"
          Stroke="Transparent"
          Background="#D4CAFC"
          HeightRequest="5"
          HorizontalOptions="FillAndExpand"
          ZIndex="2"
            Margin="20,5,20,10">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="15,15,15,15"/>
            </Border.StrokeShape>
        </Border>

    </VerticalStackLayout>
</ContentView>
